{
  "name": "kubeview-mcp",
  "version": "1.2.0",
  "description": "Read-only MCP server for AI-powered Kubernetes introspection",
  "main": "dist/src/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "bin": {
    "kubeview-mcp": "./bin/kubeview-mcp.js",
    "kubeview-mcp-code-mode": "./bin/kubeview-mcp-code-mode.js"
  },
  "files": [
    "bin/",
    "src/",
    "dist/",
    "*.md",
    "*.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/cli/cli.ts",
    "start": "tsc && node bin/kubeview-mcp.js",
    "setup": "node bin/setup.js",
    "code-mode": "node bin/kubeview-mcp-code-mode.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "command": "node src/cli/run-command.js",
    "release": "npm run release:check && npm run release:qa && npm run release:build && npm run release:tag",
    "release:check": "git diff --exit-code && git diff --cached --exit-code || (echo 'Error: Working directory not clean. Please commit or stash changes.' && exit 1)",
    "release:qa": "npm run lint && npm run typecheck && npm run test",
    "release:build": "npm run build",
    "release:tag": "git tag v$(node -p \"require('./package.json').version\") && echo 'Tagged version v'$(node -p \"require('./package.json').version\")"
  },
  "keywords": [
    "kubernetes",
    "mcp",
    "cursor",
    "debugging",
    "k8s",
    "devtools"
  ],
  "author": "kubeview-mcp team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@modelcontextprotocol/sdk": "^1.17.1",
    "isolated-vm": "^6.0.2",
    "winston": "^3.17.0",
    "zod": "^3.25.36"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
